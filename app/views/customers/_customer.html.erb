<div class="box">
  <article class="media">
    <div class="media-left">
      <% if @customer.image.attached? %>
        <%= image_tag @customer.image.variant(resize: "100x100") %>
      <% else %>
        <div class="default-avatar">
          <%= image_tag 'default-avatar.png', alt: 'Default Avatar' %>
        </div>
      <% end %>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= @customer.full_name %></strong>
          <br>
          <strong>Phone Number:</strong> <%= @customer.phone_number %>
          <br>
          <strong>Email:</strong> <%= @customer.email_address.presence || 'N/A' %>
          <br>
          <strong>Notes:</strong> <%= simple_format @customer.notes %>
        </p>
      </div>
    </div>
  </article>
</div>
